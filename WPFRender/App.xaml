<Application
    x:Class="WPFRender.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFRender"
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!--#region [Value Converters]-->
        <local:BoolToVisibilityConverter x:Key="boolToVisibility" />
        <local:BoolToReverseConverter x:Key="boolToReverse" />
        <!--#endregion-->

        <!--#region [Fonts]-->
        <FontFamily x:Key="Aptos">pack://application;,,,/Fonts/#Aptos</FontFamily>
        <!--#endregion-->

        <!--#region [Images]-->
        <BitmapImage x:Key="background" UriSource="Assets/background.png" />
        <Image x:Key="clearAll" Source="Assets/ClearAll.png" />
        <!--#endregion-->

        <!--#region [Background Control Styles]-->
        <Style x:Key="listviewBackground" TargetType="{x:Type ListView}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{StaticResource background}" TileMode="None" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="listboxBackground" TargetType="{x:Type ListBox}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{StaticResource background}" TileMode="None" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="borderBackground" TargetType="{x:Type Border}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{StaticResource background}" TileMode="None" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="gridBackground" TargetType="{x:Type Grid}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{StaticResource background}" TileMode="None" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="stackBackground" TargetType="{x:Type StackPanel}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{StaticResource background}" TileMode="None" />
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="dockBackground" TargetType="{x:Type DockPanel}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{StaticResource background}" TileMode="None" />
                </Setter.Value>
            </Setter>
        </Style>
        <!--#endregion-->

        <!--#region [Application Brushes]-->
        <Color x:Key="bbBlue">#002F51</Color>
        <SolidColorBrush x:Key="bbBlueBrush" Color="{StaticResource bbBlue}" />

        <Color x:Key="ShadowDark">#FF101012</Color>
        <SolidColorBrush x:Key="ShadowDarkBrush" Color="{StaticResource ShadowDark}" />

        <Color x:Key="ShadowLight">#FF999999</Color>
        <Color x:Key="ControlLightColor">White</Color>
        <Color x:Key="ControlMediumColor">#FF444445</Color>
        <Color x:Key="ControlDarkColor">#FF211AA9</Color>
        <Color x:Key="ControlMouseOverColor">#FF242426</Color>
        <Color x:Key="ControlPressedColor">#FF343435</Color>
        <Color x:Key="GlyphColor">#FF141414</Color>
        <Color x:Key="GlyphMouseOver">sc#1, 0.004391443, 0.002428215, 0.242281124</Color>
        <Color x:Key="BorderLightColor">#FFCCCCCC</Color>
        <Color x:Key="BorderMediumColor">#FF888888</Color>
        <Color x:Key="BorderDarkColor">#FF444444</Color>
        <Color x:Key="PressedBorderLightColor">#FF888888</Color>
        <Color x:Key="PressedBorderDarkColor">#FF444444</Color>
        <Color x:Key="DisabledBorderLightColor">#FFAAAAAA</Color>
        <Color x:Key="DisabledBorderDarkColor">#FF888888</Color>
        <Color x:Key="DefaultBorderBrushDarkColor">Black</Color>

        <SolidColorBrush x:Key="ShadowLightBrush" Color="{StaticResource ShadowLight}" />
        <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="#CCC" />
        <SolidColorBrush x:Key="DisabledBackgroundBrush2" Color="#999" />
        <SolidColorBrush x:Key="DisabledBorderBrush" Color="#AAA" />
        <SolidColorBrush x:Key="DisabledForegroundBrush" Color="#888" />
        <SolidColorBrush x:Key="ApplicationBackground" Color="LightGray" />
        <SolidColorBrush x:Key="ApplicationForeground" Color="DarkGray" />
        <SolidColorBrush x:Key="ApplicationTextForeground" Color="#0072C4" />
        <SolidColorBrush x:Key="ApplicationHighlight" Color="White" />

        <LinearGradientBrush x:Key="tooltipGradient" SpreadMethod="Pad" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#F0F0F2" />
            <GradientStop Offset="0.4" Color="#a5a5a7" />
            <GradientStop Offset="1" Color="#303032" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="animationGradient" SpreadMethod="Pad" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#FFFFFF" />
            <GradientStop Offset="0.4" Color="#909090" />
            <GradientStop Offset="1" Color="#033981" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="geometryGradient" StartPoint="0.2,0" EndPoint="0.8,1">
            <GradientStop Offset="0" Color="#20204F" />
            <GradientStop Offset="0.45" Color="#15153F" />
            <GradientStop Offset="0.8" Color="#20254F" />
            <GradientStop Offset="1" Color="#30305F" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="backgroundGradient" SpreadMethod="Pad" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#d0d0da" />
            <GradientStop Offset="0.4" Color="#0063B1" />
            <GradientStop Offset="1" Color="#021961" />
