        <LinearGradientBrush x:Key="ProgressBrush" StartPoint="1,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Offset="0.0" Color="#666" />
                    <GradientStop Offset="1.0" Color="#333" />
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ProgressFillBrush" StartPoint="1,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Offset="0.0" Color="#FF1060B0" />
                    <GradientStop Offset="1.0" Color="#FF103080" />
                </GradientStopCollection>
            </GradientBrush.GradientStops>
        </LinearGradientBrush>
        <!--  This is for smoothing the transition between our two brushes during the ObjectAnimationUsingKeyFrames  -->
        <LinearGradientBrush x:Key="ProgressFillMidBrush" StartPoint="1,0" EndPoint="0,1">
            <GradientBrush.GradientStops>
                <GradientStopCollection>
                    <GradientStop Offset="0.0" Color="#D91060B0" />
                    <GradientStop Offset="1.0" Color="#D9103080" />
                </GradientStopCollection>
            </GradientBrush.GradientStops>
